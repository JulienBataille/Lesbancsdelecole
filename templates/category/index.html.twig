{% extends 'base.html.twig' %}

{% block title %}categories{% endblock %}

{% block body %}
<div class="container my-3">
    <h1>Catégories</h1>
    {% include 'layouts/_flash_message.html.twig' %}
    <table class="table my-3">
        <tr>
            <th>id</th>
            <th>Nom de la catégorie</th>
            <th>Action</th>
        </tr>
        {% for category in categories %}
        <tr>
            <td>{{ category.id }}</td>
            <td>{{ category.name }}</td>
            <td>
                <a href="{{path('app_category_update',{'id':category.id})}}"class="btn btn-outline-primary">Modifier</a>
                <a onclick="return confirm('voulez-vous supprimez cette catégorie ?')"href="{{path('app_category_delete',{'id':category.id})}}" class="btn btn-danger">Supprimer</a>

            </td>
        </tr>
        {% else %}
        <p> aucune catégorie à afficher</p>
        {% endfor %}
    </table>
    <a href="{{path('app_category_new')}}" class="btn btn-outline-primary">Ajouter une catégorie</a>

</div>
{% endblock %}
