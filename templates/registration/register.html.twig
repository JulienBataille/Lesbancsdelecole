{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="container security-form">
        <div class="login-form">
            <h1>Register</h1>

            {{ form_errors(registrationForm) }}

            {{ form_start(registrationForm) }}
                {{ form_widget(registrationForm.firstname, {'attr':{'class':'form form-control mb-3', 'placeholder':'Pr√©nom'}}) }}
                {{ form_widget(registrationForm.lastname, {'attr':{'class':'form form-control mb-3', 'placeholder':'Nom'}}) }}

                {{ form_widget(registrationForm.email, {'attr':{'class':'form form-control mb-3', 'placeholder':'Email'}}) }}
                {{ form_widget(registrationForm.plainPassword, {
                    label: 'Password',
                    'attr': {'class':'form form-control mb-3', 'placeholder':'Mot de passe'}
                }) }}
                {{ form_row(registrationForm.agreeTerms,{'attr': {'class':'mb-3'}}) }}

                <button type="submit" class="btn btn-block btn-primary">Register</button>
            {{ form_end(registrationForm) }}
        </div>
    </div>
{% endblock %}
