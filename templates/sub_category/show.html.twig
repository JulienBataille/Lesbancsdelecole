{% extends 'base.html.twig' %}

{% block title %}SubCategory{% endblock %}

{% block body %}
<div class="container my-5">
    <h1>Sous Catégorie</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ sub_category.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ sub_category.name }}</td>
            </tr>
        </tbody>
    </table>


    <a class="btn btn-outline-primary my-1" href="{{ path('app_sub_category_edit', {'id': sub_category.id}) }}">edit</a>

    {{ include('sub_category/_delete_form.html.twig') }}
    <a href="{{ path('app_sub_category_index') }}">Retour à la liste</a>
</div>
{% endblock %}
