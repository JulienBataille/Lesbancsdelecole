{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
<div class="container my-5">
    <h1>Product</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ product.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ product.description }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ product.price }}</td>
            </tr>
        </tbody>
    </table>


    <a class="btn btn-outline-primary my-1" href="{{ path('app_product_edit', {'id': product.id}) }}">edit</a>
    <a class="btn btn-outline-primary my-1" href="{{path('app_product_stock_add_history',{'id': product.id})}}">Historique</a>

    {{ include('product/_delete_form.html.twig') }}
    <a href="{{ path('app_product_index') }}">back to list</a>
</div>
{% endblock %}
